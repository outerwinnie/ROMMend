<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ROMMend.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="ROMMend.Avalonia.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ROMMend"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        Width="1024" Height="768"
        MinWidth="800" MinHeight="600">

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="32"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="#2a82da"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#3292ea"/>
        </Style>
        <Style Selector="Button:pressed">
            <Setter Property="Background" Value="#1a72ca"/>
        </Style>
        <Style Selector="ListBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="ProgressBar">
            <Setter Property="Height" Value="25"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Foreground" Value="#2a82da"/>
        </Style>
        <Style Selector="Button.titlebar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style Selector="Button.titlebar-action">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector="Button.titlebar:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#44FFFFFF"/>
        </Style>
        <Style Selector="Button.titlebar-action:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#44FFFFFF"/>
        </Style>
        <Style Selector="Button.titlebar:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#66FFFFFF"/>
        </Style>
        <Style Selector="Button.titlebar-action:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#66FFFFFF"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </Window.Styles>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="#151515"
                    TintOpacity="1"
                    MaterialOpacity="0.85"/>
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Grid Margin="20" RowDefinitions="Auto,*">
            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,20">
                <TextBlock Grid.Column="0" 
                         Text="ROMMend"
                         FontSize="20"
                         FontWeight="Bold"
                         VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          Spacing="5">
                    <Button Command="{Binding LogoutCommand}"
                            Classes="titlebar-action"
                            IsVisible="{Binding IsLoggedIn}"
                            Margin="0,0,15,0">
                        Logout
                    </Button>
                    <Button Classes="titlebar"
                            HorizontalAlignment="Right"
                            Click="MinimizeWindow">
                        ðŸ—•
                    </Button>
                    <Button Classes="titlebar"
                            HorizontalAlignment="Right"
                            Click="MaximizeWindow">
                        ðŸ—–
                    </Button>
                    <Button Classes="titlebar"
                            HorizontalAlignment="Right"
                            Click="CloseWindow"
                            Foreground="#E81123">
                        âœ•
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Login Form -->
            <StackPanel Grid.Row="1" Spacing="15" IsVisible="{Binding !IsLoggedIn}">
                <TextBlock Text="ROMMend"
                         FontSize="24"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"/>

                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" Margin="0,20">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Host:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Host}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Username:" VerticalAlignment="Center" Margin="0,10,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Username}" Margin="0,10,0,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Password:" VerticalAlignment="Center" Margin="0,10,10,0"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Password}" PasswordChar="â€¢" Margin="0,10,0,0"/>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <Button Command="{Binding LoginCommand}"
                            IsEnabled="{Binding !IsLoading}">
                        Login
                    </Button>
                    <Button Command="{Binding SelectDownloadDirectoryCommand}">
                        Select Download Directory
                    </Button>
                </StackPanel>
            </StackPanel>

            <!-- Main Content -->
            <Grid Grid.Row="1" IsVisible="{Binding IsLoggedIn}" RowDefinitions="Auto,*,Auto">
                <!-- Filters -->
                <Grid Grid.Row="0" ColumnDefinitions="Auto,*" Margin="0,0,0,15">
                    <ComboBox Grid.Column="0"
                             ItemsSource="{Binding Platforms}"
                             SelectedItem="{Binding SelectedPlatform}"
                             HorizontalAlignment="Left"
                             Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1"
                            Text="{Binding SearchQuery}"
                            Watermark="Search ROMs..."
                            HorizontalAlignment="Stretch"/>
                </Grid>

                <!-- ROM List -->
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding FilteredRoms}"
                         Background="#333333"
                         CornerRadius="4"
                         Margin="0,0,0,15">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto,*" Margin="5">
                                <Image Grid.Column="0" 
                                       Source="{Binding CoverImage}"
                                       Width="60" Height="80"
                                       Margin="0,0,10,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DisplayName}" 
                                             FontSize="14"/>
                                    <Button Content="Download"
                                            Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).DownloadRomCommand}"
                                            CommandParameter="{Binding}"
                                            Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Status and Progress -->
                <StackPanel Grid.Row="2" Spacing="10">
                    <TextBlock Text="{Binding StatusMessage}"
                             HorizontalAlignment="Center"/>
                    <ProgressBar Value="{Binding DownloadProgress}"
                               IsVisible="{Binding IsLoading}"/>
                    <TextBlock Text="{Binding DownloadStatus}"
                             HorizontalAlignment="Center"
                             IsVisible="{Binding IsLoading}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Panel>
</Window>
